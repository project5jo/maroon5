<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.mood.projectmvc.mapper.TopicMapper">
    <insert id="save">
        INSERT INTO TOPIC (topic_content) VALUES  (#{topicContent})
    </insert>

    <select id="findAll" resultType="com.spring.mood.projectmvc.entity.Topic">
        SELECT * FROM topic
    </select>
</mapper>